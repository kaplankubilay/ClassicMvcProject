    ViewBag.Title = "Delete";
}

<h2>Sil</h2>

<h3>Silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("CategoryName", "Kategi Adı")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt>
            @Html.Label("NewsTitle", "Başlık")
        </dt>

        <dd>
